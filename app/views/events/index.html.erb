<% if params[:flagged].present? && current_user.is_admin? %>
  <div class="container">
    <table class="dt table table-striped table-bordered table-hover"> 
      <thead>
        <tr>
          <th>Event Name</th>
          <th>Description</th>
          <th>Time</th>
          <th>Creator</th>
          <th>Sign-Ups</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <th><%= event.event_name %></th>
            <th><%= event.event_description %></th>
            <th><%= event.event_time %></th>
            <th><%= User.find_by(id: event.user_id).full_name %></th>
            <th><%= event.all_users_signed_up.count %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="container">
    <%= form_tag(events_url, method: :get) do %>
      <div class="row event-header">
        <div class="col-md-2"></div>
        <div class="col-md-2">
          From: <%= date_field_tag :from, class: 'form-control', min: Date.today.beginning_of_week %>
        </div>
        <div class="col-md-2">
          To: <%= date_field_tag :to, class: 'form-control', min: Date.today.end_of_week %>
        </div>
        <div class="col-md-1">
          <%= submit_tag 'Search', class: 'btn btn-primary' %>
        </div>
        <div class="col-md-1">
          <%= link_to 'Create', new_event_path, class: 'btn btn-primary' %>
        </div>
        <% if current_user.is_admin? %>
          <div class="col-md-2">
            <%= link_to "Flagged Events", events_path(flagged: true), class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div><br>
    <% end %>

    <div class="flex-container">
      <% if @events.present? %>
        <% @events.each do |event| %>
          <%= link_to event_path(event) do %>
            <div class="flex-box">
              <br>
              <%= event.event_time.strftime("%B %d %Y (%I:%M %p)") %>
              <br><br>
              Open Slots: TBA
              <br><br>

              <h5><%= event.event_name.truncate(25) %></h5>
              <br><br>
              <%= event.event_description.truncate(200) %>
            </div>
          <% end %>
        <% end %>
      <% else %>
      <% end %>
    </div>
  </div>
<% end %>










