<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
    <%= link_to event_url(@event) do %>
      <i class="bi-arrow-left-circle" style="font-size: 2rem; color: black;"></i>
    <% end %>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <h1 class="form">Editing Event</h1><br>
        <%= render "form", event: @event %>
      </div>

      <!-- Event Deletion -->
      <button type="button" class="btn btn-danger" title="Delete this event" data-bs-toggle="modal" data-bs-target="#eventDelete">
        Delete Event
      </button>

      <div class="modal fade" id="eventDelete" tabindex="-1" role="dialog" aria-labelledby="eventDeleteConfirmation" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="eventDeleteConfirmation">Confirmation</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Are you sure you want to delete this event?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-light" data-bs-dismiss="modal">Let me rethink</button>
              <%= link_to "Delete", event_path(@event.id), data: { "turbo-method": :delete }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>