<div class="row mt-5" id="<%= dom_id event %>">
  <div class="col-md-8 ps-4">
    <h1 class="mb-3"><%= event.event_name %></h1>
    <ul class="ps-0 mt-4" style="list-style: none">
      <% if event.event_time? %>
      <li>
        <div class="mt-3">
          <span>
            <i class="bi-clock-fill me-2"></i>
            <%= event.event_date_and_time %>
          </span>
        </div>
      </li>
      <% end %>
      <li>
        <div class="mt-3">
          <span>
            <i class="bi-geo-alt-fill me-2"></i>
            Your mom's house
          </span>
        </div>
      </li>
    </ul>
    <hr class="my-5">
    <div class="mb-5">
      <h4>Event Description</h4>
      <p><%= event.event_description %></p>
    </div>
    <div class="mb-5">
      <h4>Location</h4>
      <iframe
        width=100%
        height="450"
        style="border:0"
        loading="lazy"
        allowfullscreen
        referrerpolicy="no-referrer-when-downgrade"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCCcEd-SxyWVywZz9nMTJBiowQh8l1RYRQ&q=4400+University+Dr">
      </iframe>
    </div>
  </div>

  <div class="col-md-4">
    <div class="d-grid col-8 mx-auto py-5">
      <%= link_to "Register", "#", class: "btn btn-success btn-lg btn-block" %>
      <br>
      <% if @event.flagged %>
        <%= link_to "Unflag Event", flag_path(@event.id, flag: false), data: { "turbo-method": :patch }, class: "btn btn-danger btn-lg btn-block" %>
      <% else %>
        <%= link_to "Flag Event", flag_path(@event.id, flag: true), data: { "turbo-method": :patch }, class: "btn btn-danger btn-lg btn-block" %>
      <% end %>
    </div>
    <div class="card shadow p-3 mb-5 bg-body-tertiary">
      <div class="card-body">
        <h5 class="card-title">Host:</h5>
        <span>
          <%= @event.user.full_name %>
        </span>
      </div>
      <hr>
      <div class="card-body">
        <h5 class="card-title">Attendee(s):</h5>
        <span>
          <ul>
            <% @event.users.order(:created_at).each do |attendee| %>
              <li><%= attendee.full_name %></li>
            <% end %>
          <ul>
        </span>
      </div>
    </div>
  </div>
</div>
