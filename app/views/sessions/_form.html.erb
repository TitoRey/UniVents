<br><br><br><br>
<div class="container-fluid">
  <div class="container col-md-6">
    <div class="row">
      <div class="col-md-12">
        <h1>Login Page</h1>
      </div>
    </div>
    <div><br>

      <%= form_with url: login_path, method: :post do |form| %>
        <div class="row">
          <div class="col-xs-12">
            <%= text_field_tag :email, nil, placeholder: "Email", class: "form-control", required: true %></div>
          </div><br>
        <div class="row">
          <div class="col-xs-12">
            <%= text_field_tag :password, nil, placeholder: "Password", class: "form-control", required: true %>
          </div>
        </div><br>
        <div class="row">
          <div class="col-md-10">
            <p><%= link_to 'Not a User? Create New Account!', new_user_path %></p>
          </div>
          <div class="col-md-2">
            <%= submit_tag "Login", class: "btn btn-dark" %>
          </div>
        </div>
      <% end %>


    </div>
  </div>
</div>