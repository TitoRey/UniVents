<div class="home-video-wrapper">
  <%=video_tag "GMU.mp4", class:"home_video",autoplay: :autoplay,loop: :loop, muted: :muted %>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-4"></div>
      <div class="col-md-4 mt-5 form-group">
        <fieldset class="form">
          <h2 class="form">Sign Up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true, autocomplete: "given_name", required: true %>
            </div>

            <div class="field">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, autocomplete: "family_name", required: true %>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", required: true %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", required: true %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
            </div><br>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div><br>
          <% end %>

          <%= render "devise/shared/links" %>
        </fieldset>
      </div>
    </div>
  </div>
</div>