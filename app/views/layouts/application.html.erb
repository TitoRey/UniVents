<!DOCTYPE html>
<html>
  <head>
    <title>UniVents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "turbo", type: 'module' %>
  </head>

  <body>




    <% if user_signed_in? %>
    <%= render 'layouts/navbar' %>
    <% end %>
    <br><br>
    <% if notice %>
      <div class="col-md-3"></div>
      <div class="col-md-3 alert alert-success alert-dismissible">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
    <div class="col-md-3"></div>
      <div class="col-md-3 alert alert-dismissible alert-danger">
        <%= alert %>
      </div>
    <% end %>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>

